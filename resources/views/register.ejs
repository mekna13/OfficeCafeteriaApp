<div style =" margin: 10% auto; width: 60%; border: 3px solid #73AD21; padding: 30px;">
    <form action="/register" method="POST" enctype="multipart/form-data" >

        <% if(messages.error){ %> 
        <span><%= messages.error %> </span>
        <% } %> 
        <div>
            <label for="name">Name</label>
            <input type="text" name="name" id="name"  placeholder="Name" value="<%= messages.name %> ">
        </div>
        <div>
            <label for="lastname">Last Name</label>
            <input type="text" name="lastname" id="lastname"  placeholder="lastname" value="<%= messages.lastname %>">
        </div>
        <div>
            <label for="orgName">Organization Name</label>
            <input type="text" name="orgName" id="orgName"  placeholder="orgName" value="<%= messages.orgName %> ">
        </div>
        <div>
            <label for="empId">Employee Id</label>
            <input type="text" name="empId" id="empId"  placeholder="empId" value="<%= messages.empId %> ">
        </div>
        <div>
          <label for="mobileNo">Mobile No</label>
          <input type="text" name="mobileNo" id="mobileNo"  placeholder="mobileNo" value="<%= messages.name %> ">
        </div>
        <div>
          <label for="file">Upload ID Card Image ( only png or jpeg )</label>
          <input type="file" id="imgId" name="file" value="" required>
        </div>

        <div>
          <label for="email">Email</label>
          <input type="text" name="email" id="email"  placeholder="email" value="<%= messages.email %> ">
        </div>
        <div >
          <label for="password">Password</label>
          <input type="password" name="password" id="password"  placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>