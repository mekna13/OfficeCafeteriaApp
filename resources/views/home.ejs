
<div class="container-md mt-4">
    <ul class="filters text-center">
        <li class="active" data-filter="*"><a href="#!">All</a></li>
        <li data-filter=".Main"><a href="#!">Main</a></li>
        <li data-filter=".Sides"><a href="#!">Sides</a></li>
        <li data-filter=".Beverages"><a href="#!">Beverages</a></li>
    </ul>
    <div class="projects">
    <div class="row">
        <% items.forEach(function(item){ %>
        <div class="item <%= item.category %>">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/<%= item.itemImage %>" alt="..." width="100%;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                    <h5 class="card-title">Item Name: <%= item.name %></h5>
                    <p class="card-text">Price: <%= item.price %></p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <button data-item="<%= JSON.stringify(item) %>" class="add-to-cart btn btn-primary"><strong>Add</strong></button>
                    </div>
                </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="/js/isotope.min.js"></script>
<script src="/js/script.js"></script>
