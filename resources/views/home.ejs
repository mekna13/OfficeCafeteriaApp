<!-- MENU -->

    <div class="container" style="min-width: 500px;">
        <h1 class="heading">Our Menu</h1>
    </div>

    <ul class="filters text-center" style="min-width: 500px;">
        <li class="active" data-filter="*"><a href="#!">All</a></li>
        <li data-filter=".Main"><a href="#!">Main</a></li>
        <li data-filter=".Sides"><a href="#!">Sides</a></li>
        <li data-filter=".Beverages"><a href="#!">Beverages</a></li>
    </ul>
    <div class="projects">
    <div class="d-flex flex-column text-center justify-content">
        <% items.forEach(function(item){ %>
        <div class="item <%= item.category %>"  style="max-width: 700px;">
            <div class="card mb-3" style="max-width: 700px; padding: 30px 0 30px 150px; background-color: transparent;">
                <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/<%= item.itemImage %>" alt="..." width="200px" height="200px" style="border-radius: 50%;">
                </div>
                <div class="col-md-8" style="padding: 20px 20px 0 40px;">
                    <div class="card-body" style="color:black; font-weight: bold;">
                        <h5 class="card-title"><%= item.name %></h5>
                        <p class="card-text">Price: <%= item.price %></p>
                        <button data-item="<%= JSON.stringify(item) %>" class="add-to-cart btn btn-warning"><strong>Add</strong></button>
                    </div>
                </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
    <!-- END MENU -->


